<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PollutionFragment"
    android:background="@drawable/weather_background">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Wait..."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Quality Index (AQI)"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="115dp"
            android:src="@drawable/airr"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_pollutionDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Please wait..."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precautions"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="11dp"
            android:text="(For level above 150)"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Wear a mask."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Avoid exercising outdoors."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Prefer Carpooling."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Eat Vitamin C rich food items."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="15dp"/>



    </LinearLayout>



</ScrollView>